<p style="color: green"><%= notice %></p>

<div class="container text-center">

  <h1 class="text-center mb-5">Transações</h1>

  <div class="row justify-content-center">
    <div class="table-responsive">
      <div class="row">
        <% @transacaos.each do |transacao| %>
          <div class="col-md-4">
            <div class="card mb-4 bg-secondary text-secondary-emphasys">
              <div class="card-body">
              <p class="card-text"><strong>Tipo:</strong> <%= transacao.tipo %></p>
                <p class="card-text"><strong>Valor:</strong> <%= transacao.valor %></p>
                <p class="card-text"><strong>Ctegoria:</strong> <%= transacao.categoria %></p>
                <div class="button-group">
                  <%= link_to 'Mostrar', transacao, class: "btn btn-primary mr-2 mt-3" %>
                  <%= link_to 'Editar', edit_transacao_path(transacao), class: "btn btn-secondary mr-2 mt-3"%>
                  <%= button_to 'Excluir', transacao_path(transacao), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger mr-2 mt-3" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
    </div>
  </div>

  
  <div class="row justify-content-center mt-5">
    <%= link_to 'Nova transação', new_transacao_path, class: "btn btn-success btn-block custom-nova-transacao-btn", style:"width:15vw; background-color: green; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
  </div>

  <br>
  <div style="text-align: center;">
    <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-block custom-logout-btn", style: "background-color: red; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
  </div>




</div>

<style>

  /* Efeito ao passar o mouse */
  .custom-nova-transacao-btn:hover {
    transform: scale(1.1); /* Aumenta o tamanho do botão em 10% */
    border-radius: 50px;
    box-shadow: 0px 1px 5px green;
  }

  .custom-logout-btn:hover {
    transform: scale(1.1); /* Aumenta o tamanho do botão em 10% */
    border-radius: 50px;
    box-shadow: 0px 1px 5px red;
  }

</style>
