<div style="position: fixed; bottom: 20px; left: 20px;">
  <%= link_to root_path, class: "home-button" do %>
    <%= image_tag("home.jpg", alt: "Home", style: "width: 75px; height: 75px; border-radius: 50%;") %>
  <% end %>
</div>

<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-center align-items-center">
  <%= image_tag 'mf.png', width: '75', height: '75' %>
</div>

<h1 class="page-title">Meta financeiras</h1>

<div id="meta_financeiras" class="account-list">
  <% @meta_financeiras.each do |meta_financeira| %>
    <div class="account-item">
      <p class="card-text"><strong>Nome da Meta:</strong> <%= meta_financeira.nome %></p>
      <p class="card-text"><strong>Descrição:</strong> <%= meta_financeira.descricao %></p>
      <p class="card-text"><strong>Valor:</strong> <%= number_to_currency(meta_financeira.valor, unit: "R$", precision: 2, delimiter: ".", separator: ",") %></p>
      <p class="card-text"><strong>Prazo:</strong> <%= l(meta_financeira.prazo, format: :short) %></p>
      <div class="account-actions">
        <%= link_to 'Mostrar', meta_financeira, class: "action-button" %>
        <%= link_to 'Editar', edit_meta_financeira_path(meta_financeira), class: "action-button"%>
        <%= button_to 'Excluir', meta_financeira_path(meta_financeira), method: :delete, data: { confirm: 'Tem certeza?' }, class: "delete-button" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5">
  <%= link_to 'Nova meta financeira', new_meta_financeira_path, class: "btn btn-success btn-block custom-nova-mf-btn", style:"width:15vw; background-color: green; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>
<br><br>
<div style="text-align: center;">
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-block custom-logout-btn", style:"background-color: red; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>
