<p style="color: green"><%= notice %></p>

<h1>Meta financeiras</h1>

<div id="meta_financeiras">
  <% @meta_financeiras.each do |meta_financeira| %>
    <%= render meta_financeira %>
    <p>
      <%= link_to "Show this meta financeira", meta_financeira %>
    </p>
  <% end %>
</div>

<div class="row justify-content-center mt-5">
  <%= link_to 'Nova meta financeira', new_meta_financeira_path, class: "btn btn-success btn-block custom-nova-mf-btn", style:"width:15vw; background-color: green; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>
<br><br>
<div style="text-align: center;">
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-block custom-logout-btn", style:"background-color: red; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>

<style>
  /* Efeito ao passar o mouse */
  .custom-nova-mf-btn:hover {
    transform: scale(1.1); /* Aumenta o tamanho do botão em 10% */
    border-radius: 50px;
    box-shadow: 0px 1px 5px green;
  }

  .custom-logout-btn:hover {
    transform: scale(1.1); /* Aumenta o tamanho do botão em 10% */
    border-radius: 50px;
    box-shadow: 0px 1px 5px red;
  }
</style>
