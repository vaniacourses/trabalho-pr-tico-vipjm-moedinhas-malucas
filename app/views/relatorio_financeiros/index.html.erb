<div style="position: fixed; bottom: 20px; left: 20px;">
  <%= link_to root_path, class: "home-button" do %>
    <%= image_tag("home.jpg", alt: "Home", style: "width: 75px; height: 75px; border-radius: 50%;") %>
  <% end %>
</div>

<p style="color: green"><%= notice %></p>

<h1 class="page-title">Relatorio financeiros</h1>

<div id="relatorio_financeiros" class="account-list">
  <% @relatorio_financeiros.each do |relatorio_financeiro| %>
  <div class="account-item">
    <%= render relatorio_financeiro %>
    <p>
      <%= link_to "Detalhes", relatorio_financeiro %>
    </p>
  </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5">
  <%= link_to 'Novo relatorio financeiro', new_relatorio_financeiro_path, class: "btn btn-success btn-block custom-nova-rf-btn", style:"width:15vw; background-color: green; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>
<br><br>
<div style="text-align: center;">
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-block custom-logout-btn", style:"background-color: red; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>

