<p style="color: green"><%= notice %></p>

<h1 class="page-title">Contas</h1>

<div id="accounts" class="account-list">
  <% @accounts.each do |account| %>
    <div class="account-item">
      <%= render account %>
      <p class="account-details-link">
        <%= link_to "Detalhes", account %>
      </p>
    </div>
  <% end %>
</div>


<div class="row justify-content-center mt-5">
  <%= link_to 'Nova conta', new_account_path, class: "btn btn-success btn-block custom-nova-conta-btn", style:"width:15vw; background-color: green; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>
<br><br>
<div style="text-align: center;">
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-block custom-logout-btn", style:"background-color: red; color: white; border: 2px solid transparent; transition: all 0.3s ease;" %>
</div>


